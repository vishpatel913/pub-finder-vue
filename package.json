{
  "name": "pub-finder-vue",
  "description": "Pub finder app, built using Vue",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "lint-style": "stylelint '**/*.(vue|less)' --syntax less",
    "test-app": "vue-cli-service test:unit",
    "deploy": "firebase deploy",
    "deploy-app": "firebase deploy --only hosting",
    "serve": "yarn build-func && yarn --cwd functions run serve",
    "serve-mock": "yarn build-func && yarn --cwd functions run serve-mock",
    "test-func": "yarn --cwd functions run test-ci",
    "build-func": "yarn --cwd functions run build",
    "deploy-func": "firebase deploy --only functions"
  },
  "dependencies": {
    "ant-design-vue": "^1.5.2",
    "apollo-boost": "^0.4.7",
    "core-js": "^3.6.5",
    "graphql": "^15.0.0",
    "graphql-tag": "^2.10.3",
    "moment": "^2.24.0",
    "register-service-worker": "^1.7.1",
    "vue": "^2.6.11",
    "vue-apollo": "^3.0.3",
    "vue-infinite-scroll": "^2.0.2",
    "vue-meta": "^2.3.3",
    "vue-router": "^3.1.6",
    "vuex": "^3.1.3"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.3.1",
    "@vue/cli-plugin-eslint": "^4.3.1",
    "@vue/cli-plugin-pwa": "^4.3.1",
    "@vue/cli-plugin-unit-jest": "^4.3.1",
