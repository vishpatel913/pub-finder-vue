{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "plugin:vue/recommended",
    "@vue/airbnb"
  ],
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "rules": {
    "no-param-reassign": "off"
  },
  "overrides": [
    {
      "files": [
        "**/__tests__/*.js?(x)",
        "**/tests/unit/**/*.spec.js?(x)"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}