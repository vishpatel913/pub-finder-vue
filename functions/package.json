{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "build": "tsc",
    "serve": "firebase emulators:start --only functions",
    "serve-mock": "MOCK=true yarn run serve",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "logs": "firebase functions:log",
    "setup-env": "test -f .env.json && firebase functions:config:unset env && firebase functions:config:set env=\"$(cat .env.json)\"",
    "lint": "eslint . --ext .ts",
    "test": "jest --watch",
    "test-ci": "jest --coverage"
  },
  "main": "build/index.js",
  "engines": {
    "node": "10"
  },
  "dependencies": {
    "@types/axios": "^0.14.0",
    "@types/express": "^4.17.6",
    "@types/faker": "^4.1.12",
    "@types/graphql": "^14.5.0",
    "@types/moment": "^2.13.0",
    "@types/node": "^14.0.13",
    "apollo-cache-control": "^0.11.0",
    "apollo-datasource-rest": "^0.9.2",
    "apollo-server-cloud-functions": "^2.14.4",
    "axios": "^0.19.2",
    "class-validator": "^0.12.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "firebase-admin": "^8.12.1",
    "firebase-functions": "^3.7.0",
    "graphql": "^15.1.0",
    "moment": "^2.26.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.0.0-rc.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-json": "^2.1.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.0",
    "firebase-functions-test": "^0.2.1",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "private": true
}
