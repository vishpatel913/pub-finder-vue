{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "build": "tsc",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "logs": "firebase functions:log",
    "setup-env": "test -f .env.json && firebase functions:config:unset env && firebase functions:config:set env=\"$(cat .env.json)\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --watch",
    "test-ci": "jest --coverage"
  },
  "main": "build/index.js",
  "engines": {
    "node": "10"
  },
  "dependencies": {
    "@types/axios": "^0.14.0",
    "@types/express": "^4.17.5",
    "@types/faker": "^4.1.11",
    "@types/graphql": "^14.5.0",
    "@types/moment": "^2.13.0",
    "@types/node": "^13.11.1",
    "apollo-datasource-rest": "^0.8.1",
    "apollo-server-cloud-functions": "^2.12.0",
    "axios": "^0.19.2",
    "class-validator": "^0.11.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "firebase-admin": "^8.10.0",
    "firebase-functions": "^3.6.0",
    "graphql": "^14.6.0",
    "moment": "^2.24.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^0.17.6"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-promise": "^4.2.1",
    "firebase-functions-test": "^0.2.0",
    "jest": "^25.3.0",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.2",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3"
  },
  "private": true
}