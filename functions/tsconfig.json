{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "build",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2017",
      "es2016",
      "es2015.promise",
      "esnext.asynciterable"
    ],
    "noImplicitAny": false,
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "strictPropertyInitialization": false
    // "baseUrl": ".",
    // "paths": {
    //   "*": ["node_modules/*", "src/types/*"]
    // }
  },
  "include": ["src/**/*.ts", "spec/**/*.ts"]
}
